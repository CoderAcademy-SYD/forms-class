<h1>Edit Movie</h1>

<form method="POST" action="<%= movie_path(@movie_id) %>">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <input type="hidden" name="_method" value="put" />
    <div>
        <label for="title">Title</label>
        <input type="text" name="movie[title]" id="title" value="<%= @movie["title"]%>" />
    </div>
    <div>
        <label for="rating">Rating</label>
        <input type="number" name="movie[rating]" id="rating" value="<%= @movie["rating"]%>" />
    </div>
    <div>
        <label for="date">Release Date</label>
        <input type="date" name="movie[date]" id="date" value="<%= @movie["date"]%>" />
    </div>
    
    <input type="submit" value="Update Movie" />
</form>

<%= link_to("Back", :back) %>